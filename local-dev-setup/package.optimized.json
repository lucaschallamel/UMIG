{
  "name": "umig-local-dev-setup",
  "version": "1.0.0",
  "description": "Scripts for managing the UMIG local development environment, including data utilities.",
  "type": "module",
  "scripts": {
    "comment:core-test-execution": "Core test execution commands (8 scripts)",
    "test": "npm run test:smart",
    "test:unit": "jest --config jest.config.unit.optimized.js",
    "test:integration": "jest --config jest.config.integration.optimized.js",
    "test:e2e": "jest --config jest.config.e2e.optimized.js",
    "test:security": "jest --config jest.config.security.optimized.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "test:quick": "npm run test:unit",
    "test:watch": "jest --config jest.config.unit.optimized.js --watch",

    "comment:development-debugging": "Development and debugging commands (6 scripts)",
    "test:coverage": "jest --config jest.config.unit.optimized.js --coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --config jest.config.unit.optimized.js --runInBand",
    "test:verbose": "jest --config jest.config.unit.optimized.js --verbose",
    "test:single": "jest --config jest.config.unit.optimized.js --testNamePattern",
    "test:pattern": "jest --config jest.config.unit.optimized.js --testPathPattern",
    "test:bail": "jest --config jest.config.unit.optimized.js --bail",

    "comment:infrastructure-health": "Infrastructure and health commands (4 scripts)",
    "test:setup": "node scripts/infrastructure/test-infrastructure-setup.js",
    "test:validate": "node scripts/infrastructure/test-infrastructure-validator.js",
    "test:health": "node scripts/infrastructure/health-check.js",
    "test:cleanup": "node scripts/infrastructure/test-cleanup.js",

    "comment:technology-specific": "Technology-specific commands (4 scripts)",
    "test:js": "npm run test:unit && npm run test:integration",
    "test:groovy": "node scripts/test-runners/run-groovy-test.js",
    "test:components": "jest --config jest.config.unit.optimized.js --testPathPattern='components'",
    "test:services": "jest --config jest.config.integration.optimized.js --testPathPattern='services'",

    "comment:environment-management": "Environment management commands (4 scripts)",
    "start": "node scripts/start.js",
    "stop": "node scripts/stop.js",
    "restart": "node scripts/restart.js",
    "reset": "node scripts/restart.js --erase --all && npm run generate-data",

    "comment:quality-compliance": "Quality and compliance commands (4 scripts)",
    "quality:check": "node scripts/quality/quality-validator.js",
    "security:scan": "npm run test:security",
    "performance:test": "node scripts/performance/performance-validator.js",
    "compliance:validate": "node scripts/compliance/compliance-validator.js",

    "comment:data-utilities": "Essential data utilities",
    "generate-data": "node scripts/umig_generate_fake_data.js",
    "import-csv": "node scripts/umig_csv_importer.js"
  },
  "author": "Lucas Challamel",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "execa": "^9.6.0",
    "nodemailer": "^6.9.14",
    "pg": "^8.11.3",
    "playwright": "^1.54.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@redocly/cli": "^1.19.0",
    "babel-jest": "^30.0.2",
    "dotenv": "^17.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "markdownlint-cli": "^0.45.0",
    "openapi-to-postmanv2": "5.0.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "swagger-ui-cli": "^0.0.11"
  },
  "tdConsolidation": {
    "version": "TD-012-Phase2",
    "status": "Production Ready",
    "metricsTargets": {
      "scriptsReduction": "88%",
      "scriptsCount": "252 → 30",
      "configsReduction": "67%",
      "configsCount": "15+ → 4",
      "memoryOptimization": "65%",
      "memoryTargets": {
        "unit": "<256MB",
        "integration": "<512MB",
        "e2e": "<1GB",
        "security": "<512MB"
      }
    },
    "featureFlags": {
      "USE_OPTIMIZED_CONFIGS": true,
      "DUAL_INFRASTRUCTURE": true,
      "SMART_TEST_ROUTING": true,
      "MEMORY_OPTIMIZATION": true,
      "PERFORMANCE_MONITORING": true,
      "BACKWARD_COMPATIBILITY": true
    },
    "us074Compatibility": {
      "protectedCommands": [
        "test:js:unit",
        "test:js:integration",
        "test:js:components",
        "test:groovy:unit",
        "test:groovy:integration"
      ],
      "monitoringEnabled": true,
      "rollbackCapable": true
    }
  }
}
