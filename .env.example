# UMIG API Documentation Environment Variables
# Copy this file to .env and configure appropriate values for your environment

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Primary authentication credentials for API access
# Format: username:password (will be base64 encoded automatically)
# Default: admin:admin (for local development only)
# SECURITY: Never commit actual credentials to version control
UMIG_AUTH_CREDENTIALS=admin:admin

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Base URL for UMIG API endpoints
# Default: http://localhost:8090/rest/scriptrunner/latest/custom/umig
UMIG_BASE_URL=http://localhost:8090/rest/scriptrunner/latest/custom/umig

# Request timeout in milliseconds
# Default: 10000 (10 seconds)
UMIG_TIMEOUT=10000

# Maximum number of retry attempts for failed requests
# Default: 3
UMIG_MAX_RETRIES=3

# Output path for validation reports
# Default: ./validation-report.json
UMIG_OUTPUT_PATH=./validation-report.json

# =============================================================================
# DEBUGGING AND LOGGING
# =============================================================================

# Enable verbose logging for validation scripts
# Options: true, false
# Default: false
VERBOSE=false

# =============================================================================
# CONFLUENCE INTEGRATION
# =============================================================================

# Confluence base URL (for Swagger UI environment switching)
# Default: http://localhost:8090
CONFLUENCE_BASE_URL=http://localhost:8090

# =============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATION
# =============================================================================

# Current environment identifier
# Options: local, test, staging, production
# Default: local
UMIG_ENVIRONMENT=local

# =============================================================================
# SECURITY RECOMMENDATIONS
# =============================================================================

# 1. NEVER commit .env files containing real credentials
# 2. Use strong, unique credentials for each environment
# 3. Rotate credentials regularly
# 4. Use environment-specific credential management systems in production
# 5. Consider using service accounts with minimal required permissions

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================

# For production deployments:
# - Use proper secret management systems (Azure Key Vault, AWS Secrets Manager, etc.)
# - Implement credential rotation policies
# - Use service accounts with least privilege access
# - Enable audit logging for credential usage
# - Consider certificate-based authentication where possible

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test-specific overrides (used by validation scripts)
# These should point to test data and test environments only
TEST_UMIG_BASE_URL=http://localhost:8090/rest/scriptrunner/latest/custom/umig
TEST_CONFLUENCE_URL=http://localhost:8090

# =============================================================================
# SWAGGER UI CONFIGURATION
# =============================================================================

# Authentication credentials for Swagger UI (browser environment)
# Note: This will be exposed in browser JavaScript - only use for development
# Set to empty to disable auto-authentication in Swagger UI
SWAGGER_UI_AUTH_CREDENTIALS=

# =============================================================================
# VALIDATION AND QUALITY ASSURANCE
# =============================================================================

# Enable/disable specific validation checks
VALIDATE_API_ENDPOINTS=true
VALIDATE_AUTHENTICATION=true
VALIDATE_EXAMPLES=true
VALIDATE_SCHEMAS=true

# Performance testing thresholds
PERFORMANCE_THRESHOLD_MS=3000
LOAD_TEST_CONCURRENT_USERS=20
LOAD_TEST_DURATION_SECONDS=60